import tkinter as tk
from tkinter import messagebox

def calcular():
    try:
        nome = nome_entry.get()
        exerc = float(exerc_entry.get())
        d1 = float(des1_entry.get())
        d2 = float(des2_entry.get())
        d3 = float(des3_entry.get())
        p1 = float(p1_entry.get())
        p2 = float(p2_entry.get())
        p3 = float(p3_entry.get())

        media_desafios = (d1 + d2 + d3) / 3
        media_projetos = (p1 + p2 + p3) / 3
        media_final = (exerc + media_desafios + media_projetos * 2) / 4
        media_final = round(media_final, 2)

        if media_final >= 6:
            msg = f"Parabéns! Você foi aprovado com nota {media_final}"
        elif media_final >= 4:
            msg = f"Você ainda não foi aprovado! Sua nota foi {media_final}. Você terá a opção de fazer o IFA!!!"
        else:
            msg = f"Com a nota {media_final} você não foi aprovado! Veja pelo lado bom, você irá cursar a disciplina novamente semestre que vem!!!"

        messagebox.showinfo("Resultado", msg)

    except:
        messagebox.showerror("Erro", "Preencha tudo corretamente!")

janela = tk.Tk()
janela.title("Média - Lógica de Programação")

tk.Label(janela, text="Nome:").pack()
nome_entry = tk.Entry(janela)
nome_entry.pack()

tk.Label(janela, text="Média dos Exercícios:").pack()
exerc_entry = tk.Entry(janela)
exerc_entry.pack()

tk.Label(janela, text="Nota Desafio 1:").pack()
des1_entry = tk.Entry(janela)
des1_entry.pack()

tk.Label(janela, text="Nota Desafio 2:").pack()
des2_entry = tk.Entry(janela)
des2_entry.pack()

tk.Label(janela, text="Nota Desafio 3:").pack()
des3_entry = tk.Entry(janela)
des3_entry.pack()

tk.Label(janela, text="Projeto Fase 1:").pack()
p1_entry = tk.Entry(janela)
p1_entry.pack()

tk.Label(janela, text="Fase 2:").pack()
p2_entry = tk.Entry(janela)
p2_entry.pack()

tk.Label(janela, text="Fase 3:").pack()
p3_entry = tk.Entry(janela)
p3_entry.pack()

tk.Button(janela, text="Calcular", command=calcular).pack(pady=10)

janela.mainloop()